<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="@dimen/altoLand"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayoutTop"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/panel_superior"
                android:background="@drawable/fondosuperior"
                android:visibility="visible">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.067" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/ntv_hidratos"
                    android:id="@+id/ntv_Hidratos"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.133"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/tv_hidratos"
                    android:id="@+id/tv_Hidratos"
                    android:layout_gravity="center_horizontal"
                    android:hint="tv_HDC"
                    android:layout_weight="0.133"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.067" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/ntv_grasas"
                    android:id="@+id/ntv_Grasas"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.133"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/tv_grasas"
                    android:id="@+id/tv_Grasas"
                    android:layout_gravity="center_horizontal"
                    android:hint="tv_Grasas"
                    android:layout_weight="0.133"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.067" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/ntv_proteinas"
                    android:id="@+id/ntv_Proteinas"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.133"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/tv_proteinas"
                    android:id="@+id/tv_Proteinas"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.133"/>

            </LinearLayout>





            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/panel_valores_teclado"
                android:visibility="invisible"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:weightSum="1"

                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_hidratos2"
                            android:id="@+id/tv_HDC2"
                            android:layout_weight="0.7"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="end"
                            android:id="@+id/et_HDC" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_gr"
                            android:id="@+id/tv_gr1"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_grasas2"
                            android:id="@+id/tv_Grasas2"
                            android:layout_weight="0.7"/>



                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="end"

                            android:id="@+id/et_Grasas" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_gr"
                            android:id="@+id/tv_gr2"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_proteinas2"
                            android:id="@+id/tv_Proteinas2"
                            android:layout_weight="0.7" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:gravity="end"
                            android:id="@+id/et_Proteinas" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/tv_gr"
                            android:id="@+id/tv_gr3"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/configuracion"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/___"
                        android:id="@+id/rayas"
                        android:textColor="@color/azul"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/tv_configuracion"
                        android:id="@+id/tv_Configuracion"
                        android:textColor="@color/azul"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/tv_fattokcal"
                        android:id="@+id/tv_FatToKcal"
                        android:textColor="@color/azul"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/tv_proteintocal"
                        android:id="@+id/Tv_ProteinToKcal"
                        android:textColor="@color/azul"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/tv_kcaltorac"
                        android:id="@+id/tv_KcalToRac"
                        android:layout_alignBottom="@+id/tv_IntroValores"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/azul"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:text="@string/btn_info"
        android:id="@+id/btn_Info"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTop"
        android:layout_alignParentStart="true"

        android:background="@android:drawable/ic_menu_info_details"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tv_introvalores"
        android:id="@+id/tv_IntroValores"
        android:layout_below="@+id/linearLayoutTop"
        android:layout_alignParentEnd="true"
        android:paddingRight="300dp"
        android:visibility="visible"
        android:textColor="@color/azul" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/btn_volver"
        android:id="@+id/tv_Volver"
        android:layout_alignBottom="@+id/tv_IntroValores"
        android:layout_alignStart="@+id/tv_IntroValores"

        android:visibility="invisible"
        android:textColor="@color/azul" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentEnd="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/panel_inferior"
                android:background="@drawable/fondoinferior"
                android:visibility="visible"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_gravity="left"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/tv_ractotal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:id="@+id/tv_RacTotal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/tv_bolodual"
                            android:id="@+id/tv_BoloDual"
                            android:layout_weight="0.6"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/ntv_inicio"
                                android:id="@+id/ntv_Inicio"
                                android:textColor="#FF3F51B5"
                                android:layout_weight="0.5"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/ntv_cuadrado"
                                android:id="@+id/ntv_Cuadrado"
                                android:layout_weight="0.5"
                                android:textColor="#FF3F51B5"/>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"></FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/ntv_ractotal"
                        android:id="@+id/ntv_RacTotal"
                        android:textColor="#FF3F51B5"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/tv_inicio"
                        android:id="@+id/tv_Inicio"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/tv_cuadrado"
                        android:id="@+id/tv_Cuadrado"
                        android:layout_weight="0.2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/tv_en"
                            android:id="@+id/tv_En"
                            android:layout_weight="0.3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/ntv_horas"
                            android:id="@+id/ntv_Horas"
                            android:layout_weight="0.67"
                            android:textColor="#FF3F51B5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/panel_inferior_oculto"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/fondodualbolus_fondo_grafica"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/panel_grafica_dual">
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>