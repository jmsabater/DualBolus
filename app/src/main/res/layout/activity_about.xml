<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <include layout="@layout/tool_bar"
        android:id="@+id/tool_bar"/>

    <TextView
        android:text="@string/titulo_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tituloAbout"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_weight="0.04"
        android:background="@color/colorPrimaryDark_trans"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:text="@string/texto_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingEnd="@dimen/activity_vertical_margin"

            style="@style/Base.TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:background="@drawable/logopediatria"
                android:padding="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"/>

            <Space
                android:layout_width="@dimen/activity_vertical_margin"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="108dp"
                android:layout_height="67dp"
                android:background="@drawable/logonbio"
                android:padding="@dimen/activity_vertical_margin"
                android:paddingTop="100dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:text="@string/final_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>